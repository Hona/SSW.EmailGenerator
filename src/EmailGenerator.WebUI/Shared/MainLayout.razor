@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudContainer MaxWidth="_containerWidth" Class="d-flex">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Email Generator</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="_containerWidth" Class="py-8">
            <NavBreadcrumbs />
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private MaxWidth _containerWidth = MaxWidth.Large;

    private MudTheme _theme = new()
    {
        Palette = new Palette()
        {
            Primary = "#cc4141",
            Secondary = "#41cccc",
            Tertiary = "#cc8741",
            AppbarBackground = "#cc4141",
            Background = "#eeeeee"
        }
    };

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}